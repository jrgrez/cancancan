<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= form_for([@post, @comment]) do |f|%>
	<div class="field">
		<%= f.label :content, "Contenido" %>
		<%= f.text_area :content %>
	</div>
	<div class="actions">
    	<%= f.submit %>
    </div>
<% end %>
